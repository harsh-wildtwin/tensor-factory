---
const nav = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/responsible-ai', label: 'Responsible AI' },
  { href: '/trust-compliance', label: 'Trust & Compliance' },
  { href: '/careers', label: 'Careers' },
  { href: '/newsroom', label: 'Newsroom' },
];
---
<header class="site-header" style="position:sticky; top:0; z-index:2100;">
  <div class="container nav" role="navigation" aria-label="Main">
    <a href="/" class="brand" style="text-decoration:none; color:inherit;">
      <span class="brand-mark" aria-hidden="true">
        <img src="/assets/logo.svg" alt="" width="22" height="22" style="display: block;" />
      </span>
      <span>Tensor Factory</span>
    </a>
    <input id="nav-toggle" type="checkbox" class="nav-toggle" aria-label="Toggle navigation" />
    <label class="hamburger" for="nav-toggle" aria-controls="primary-navigation" aria-expanded="false">
      <span></span>
      <span></span>
      <span></span>
    </label>
    <label class="nav-overlay" for="nav-toggle" aria-hidden="true"></label>
    <nav id="primary-navigation" class="nav-links" style="margin-left:auto;">
      <label class="nav-close" for="nav-toggle">
        <span class="sr-only">Close navigation</span>
      </label>
      {nav.map(item => (
        <a href={item.href}>{item.label}</a>
      ))}
    </nav>
  </div>
  
</header>


