---
const base = Astro.site?.pathname ?? '/tensor-factory/';
const nav = [
  { href: base, label: 'Home' },
  { href: base + 'about', label: 'About' },
  { href: base + 'our-work', label: 'Our Work' },
  { href: base + 'responsible-ai', label: 'Responsible AI' },
  { href: base + 'trust-compliance', label: 'Trust & Compliance' },
  { href: base + 'careers', label: 'Careers' },
  { href: base + 'newsroom', label: 'Newsroom' },
];
---
<header class="site-header">
  <div class="container nav" role="navigation" aria-label="Main">
    <a href={base} class="brand" style="text-decoration:none; color:inherit;">
      <span class="brand-mark"></span>
      <span>Tensor Factory</span>
    </a>
    <nav class="cluster" style="margin-left:auto;">
      {nav.map(item => (
        <a href={item.href}>{item.label}</a>
      ))}
    </nav>
  </div>
  
</header>


